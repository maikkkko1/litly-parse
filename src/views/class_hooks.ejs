<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('./partials/header'); %></header>

    <main>
      <div class="px-3 mt-3">
        <h2 class="display-4 mt-2">Class Hooks</h2>
        <h5 class="mt-3">Documented Class Hooks for <%= appName %>.</h5>

        <div class="mt-4">
          <% data.forEach(function(cf) { %>

          <div class="card mt-3" style="width: auto">
            <div class="card-body">
              <h5 class="card-title">
                Hook name: <span class="text-primary"><%= cf.name %></span>
              </h5>
              <p class="card-text lead"><%= cf.description %></p>
            </div>
          </div>

          <% }); %>
        </div>
      </div>
    </main>
  </body>
</html>
