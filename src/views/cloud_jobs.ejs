<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('./partials/header'); %></header>

    <main>
      <div class="px-3 mt-3 mb-2">
        <h2 class="display-4 mt-2">Cloud Jobs</h2>
        <h5 class="mt-3">Documented Cloud Jobs for <%= appName %>.</h5>

        <div class="mt-4">
          <% data.forEach(function(cj) { %>

          <div class="card mt-3" style="width: auto">
            <div class="card-body">
              <h5 class="card-title">Job name: <span class="text-primary"><%= cj.name %></span></h5>
              <p class="card-text lead"><%= cj.description %></p>

              <h5 class="mt-3">Run every <%= cj.runEvery %>.</h5>
            </div>
          </div>

          <% }); %>
        </div>
      </div>
    </main>
  </body>
</html>
