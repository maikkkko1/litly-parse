<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="container">
    <header>
      <%- include('./partials/header'); %>
    </header>

    <main>
      <div class="px-3 mt-3">
        <h2 class="display-4 mt-2">Cloud Functions</h2>
        <h5 class="mt-3">Documented Cloud Functions for <%= appName %>.</h5>

        <div class="mt-4">
          <% data.forEach(function(cf) { %>

          <div class="card mt-3" style="width: auto;">
            <div class="card-body">
              <h5 class="card-title">Function name: <span class="text-primary"><%= cf.name %></span></h5>
              <p class="card-text lead"><%= cf.description %></p>
              <h5>
                Params: <%if (cf.params.length == 0) { %> <span class="text-danger font-weight-bold">No params required</span> <%
                } %>
              </h5>
              <% cf.params.forEach(function(param) { %>

              <li>
                <%= param.paramName %> -
                <span class="text-info font-weight-bold"
                  ><%= param.paramType %> <% if (param.isParseClassType) { %> *Parse Class Object*</span
                >
                <% } %>
              </li>

              <% }); %>

              <h5 class="mt-3">Response</h5>
              <%if (cf.response.isJson) { %>
              <pre><code><%= JSON.stringify(cf.response.response, null, 2); %></code></pre>
              <% } %> <%if (!cf.response.isJson) { %>
              <pre><code><%= cf.response.response %></code></pre>
              <% } %>
            </div>
          </div>

          <% }); %>
        </div>
      </div>
    </main>
  </body>
</html>
